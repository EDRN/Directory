PATH=/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin
export PATH

# Users
${buildout:bin-directory}/dmccsync \
    -u "${usernames:system-dn}" \
    -p "${passwords:system-dn}" \
    -l "ldap://${interfaces:ldap}:${ports:ldap}" \
    ${rdf:people}

# Groups
${buildout:bin-directory}/dmccgroupsync \
    -u "${usernames:system-dn}" \
    -p "${passwords:system-dn}" \
    -l "ldap://${interfaces:ldap}:${ports:ldap}" \
    ${rdf:people} \
    ${rdf:sites} \
    ${rdf:committees}

